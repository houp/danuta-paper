@misc{nenca2024automata,
  author       = {Anna Nenca and Barbara Wolnik and Janusz Dybizbański},
  title        = {Advances in the parity problem for cellular automata},
  year         = {2024},
  howpublished = {Talk at 30th International Workshop on Cellular Automata and Discrete Complex Systems (AUTOMATA 2024)},
  note         = {Location: Durham, UK; Dates: July 22--24, 2024},
